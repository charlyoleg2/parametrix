{
	"name": "designix-script-ts",
	"version": "1.0.0",
	"description": "A sample code showcasing the usage of geometrix and designix",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parametrix.git"
	},
	"homepage": "https://charlyoleg2.github.io/parametrix/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"default": "./build/index.js"
		}
	},
	"bin": "./build/index.js",
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --out-dir build --watch",
		"build": "tsup --out-dir build",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"test:bats": "bats test/test1.bats",
		"ci": "run-s check build pretty lint test:unit:once test:bats",
		"run": "build/index.js",
		"clean": "rimraf build dist node_modules output"
	},
	"dependencies": {
		"designix": "^1.0.0",
		"geomcli": "^1.0.0",
		"geometrix": "^1.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"bats": "^1.11.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vitest": "^3.0.3"
	}
}
