{
	"name": "geomcli",
	"version": "1.0.2",
	"description": "the nodejs companion library of geometrix",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parametrix.git"
	},
	"homepage": "https://charlyoleg2.github.io/parametrix/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint test:unit:once",
		"clean": "rimraf build dist node_modules"
	},
	"dependencies": {
		"geometrix": "^1.0.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vitest": "^3.0.3"
	}
}
