{
	"name": "designix-uis",
	"version": "1.0.4",
	"description": "mini-server for static content of designix-ui",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parametrix.git"
	},
	"homepage": "https://charlyoleg2.github.io/parametrix/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear",
		"ui"
	],
	"type": "module",
	"engines": {
		"node": ">=20.10.0"
	},
	"exports": {
		".": {
			"types": "./dist/designix-uis.d.ts",
			"default": "./dist/designix-uis.js"
		}
	},
	"bin": {
		"designix-uis": "dist/designix-uis.js"
	},
	"files": [
		"dist/",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/designix-uis.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"clean_public": "rimraf dist/public",
		"copy": "fse copy ../designix-ui/build dist/public",
		"checkCopy": "ls -l dist/public/index.html",
		"ci": "run-s check build pretty lint test:unit:once clean_public copy checkCopy",
		"run": "node dist/designix-uis.js",
		"run-help": "node dist/designix-uis.js --help",
		"clean": "rimraf node_modules build dist tmp"
	},
	"dependencies": {
		"express": "^4.21.2",
		"fs-extra": "^11.3.0",
		"get-port": "^7.1.0",
		"open": "^10.1.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@atao60/fse-cli": "^0.1.9",
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^5.0.0",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.13.1",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.20.0",
		"eslint-config-prettier": "^10.0.1",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.5.0",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.6",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0",
		"vitest": "^3.0.5"
	}
}
