{
	"name": "designix-cli",
	"version": "0.5.37",
	"description": "The application cli as frontend of geometrix and designix",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parametrix.git"
	},
	"homepage": "https://charlyoleg2.github.io/parametrix/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/designix-cli.d.ts",
			"default": "./dist/designix-cli.js"
		}
	},
	"bin": {
		"designix-cli": "dist/designix-cli.js"
	},
	"files": [
		"dist/",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/designix-cli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"test:bats": "bats test/test1.bats",
		"ci": "run-s check build pretty lint test:unit:once test:bats",
		"run": "dist/designix-cli.js",
		"clean": "shx rm -fr build dist node_modules output"
	},
	"dependencies": {
		"designix": "^0.5.46",
		"geomcli": "^0.5.48",
		"geometrix": "^0.5.45"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@typescript-eslint/parser": "^7.0.1",
		"bats": "^1.11.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"shx": "^0.3.4",
		"tsup": "^8.2.2",
		"typescript": "^5.5.4",
		"vitest": "^2.0.4"
	}
}
