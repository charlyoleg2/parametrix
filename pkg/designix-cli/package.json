{
	"name": "designix-cli",
	"version": "1.0.18",
	"description": "The application cli as frontend of geometrix and designix",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parametrix.git"
	},
	"homepage": "https://charlyoleg2.github.io/parametrix/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/designix-cli.d.ts",
			"default": "./dist/designix-cli.js"
		}
	},
	"bin": {
		"designix-cli": "dist/designix-cli.js"
	},
	"files": [
		"dist/",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/designix-cli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"test:bats": "bats test/test1.bats",
		"ci": "run-s check build pretty lint test:unit:once test:bats",
		"run": "dist/designix-cli.js",
		"clean": "rimraf build dist node_modules output"
	},
	"dependencies": {
		"designix": "^1.0.18",
		"geomcli": "^1.0.18",
		"geometrix": "^1.0.18"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"bats": "^1.11.1",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.3",
		"npm-run-all2": "^8.0.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0",
		"vitest": "^3.1.3"
	}
}
